<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:gravity="center"
        android:text="Category: General Knowledge"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text='"This is how a question will be displayed in the TectView, whoopdiedoo"'
        android:textSize="16sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/difficulty"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="HARD: 3 points"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Score: 10"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="183dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/answer1"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:onClick="answer1Clicked"
                android:padding="0dp"
                android:text="Button" />

            <Button
                android:id="@+id/answer3"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:onClick="answer3Clicked"
                android:padding="0dp"
                android:text="Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/answer2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:onClick="answer2Clicked"
                android:padding="0dp"
                android:text="Button" />

            <Button
                android:id="@+id/answer4"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:onClick="answer4Clicked"
                android:padding="0dp"
                android:text="Button" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="396dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:onClick="submitClicked"
        android:padding="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:text="This is my answer!" />

</LinearLayout>